<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" class="top-bar" ">
			<h1>Eat The Hamburger</h1>
		</div>
		<div class="col-xs-6 text-center" class="task" ">
			<div class="row">
				{{#each hamburger_data}}
					{{#unless this.devoured}}
				<div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.hamburger_name}}</pre>
				</div>
			<div class="col-xs-3 text-center">
				<form method="POST" action="/hamburgers/update?_method=PUT" class="button-size">
					<input type="hidden" name="hamburger_id" type="text" value="{{this.id}}">
					<br>
					<button type="submit" class="btn btn-default">
						DEVOUR IT!
					</button>
				</form>
			</div>
			{{/unless}}
			{{/each}}
			</div>	
		</div>

		<div class="col-xs-6 text-center" class="task">
			{{#each hamburger_data}}
				{{#if this.devoured}}
					<input class="form-control" type="text" placeholder="{{this.id}}. {{this.hamburger_name}}" readonly>
				{{/if}}
			{{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/hamburgers/create" method="POST">
				<input type="text" name="hamburger_name" class="form-control" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
			</form>
			<p>Enter a hamburger you would like to order!</p>
		</div>
	</div>
</div>